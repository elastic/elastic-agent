# The basic authentication username used to connect to Elasticsearch
# This user needs the privileges required to publish events to Elasticsearch.
ES_USERNAME=elastic

# The basic authentication password used to connect to Elasticsearch
ES_PASSWORD=changeme

# The Elasticsearch host to communicate with
ES_HOST=https://elasticsearch:9200

# Indicates the type of verification when using ldaps to protect against man in the middle attacks and certificate forgery.
# More info at https://www.elastic.co/guide/en/elasticsearch/reference/current/security-settings.html
ES_SSL_VERIFICATION_MODE=full

# For optimal experience, Filebeat only connects to instances that are at least on the same version as the Beat.
# The check can be disabled by setting output.elasticsearch.allow_older_versions
ES_ALLOW_OLDER_VERSIONS=false
